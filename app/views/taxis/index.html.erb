<p id="notice"><%= notice %></p>

<h1>Taxis</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Services</th>
      <th>Status</th>
      <th>Rate</th>
      <th>Sumkms</th>
      <th>Working</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @taxis.each do |taxi| %>
      <tr>
        <td><%= taxi.name %></td>
        <td><%= taxi.services %></td>
        <td><%= taxi.status %></td>
        <td><%= taxi.rate %></td>
        <td><%= taxi.sumkms %></td>
        <td><%= taxi.working %></td>
        <td><%= link_to 'Show', taxi %></td>
        <td><%= link_to 'Edit', edit_taxi_path(taxi) %></td>
        <td><%= link_to 'Destroy', taxi, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

